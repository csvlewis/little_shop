<section>
  <h1>Your Dashboard</h1>
  <article class="user-info">
    <p>Username: <%= current_user.name %> </p>
    <p>Email: <%= current_user.email %> </p>
    <p>Address: <%= current_user.address %> </p>
    <p>City: <%=  current_user.city %> </p>
    <p>State: <%= current_user.state %> </p>
    <p>Zip code: <%= current_user.zipcode %> </p>
  </article>
  <div class="statistics">
    <p>Top 5 Items: <%= current_user.top_items %> </p>
    <p>Items Sold: <%= current_user.items_sold_by_quantity %> </p>
    <p>Top Cities: <%= current_user.top_cities %> </p>
    <p>Customers With Most Orders: <%= current_user.top_customer_by_orders %> </p>
    <p>Cusomers With Most Items: <%= current_user.top_customer_by_items %> </p>
    <p>Biggest Spenders: <%= current_user.top_spenders %> </p>
  </div>
  <% @orders.each do |order| %>
    <div class="order-<%= order.id %>">
      <p>Order ID: <%= link_to "#{order.id}", merchant_order_path(order), method: :get %> </p>
      <p>Created on: <%= order.created_at.strftime("%m-%d-%Y") %> </p>
      <p>Total items: <%= order.total_items_for_merchantcurrent_user) %> </p>
      <p>Amount: <%= order.total_value(current_user) %> </p>
    </div>
  <% end %>
  <%= link_to 'My Items', dashboard_items_path %>
</section>
