<section class="container">
  <h3>My Coupons</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Value</th>
        <th>Created At</th>
        <th>Last Updated</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @coupons.each do |coupon| %>
        <tr id="coupon-<%= coupon.id %>">
          <td><%= coupon.name %></td>
          <td><%= "#{coupon.value}%" if coupon.percentage %>
          <%= number_to_currency(coupon.value) unless coupon.percentage %></td>
          <td><%= coupon.created_at.strftime("%B, %d %Y at %I:%M %p %Z") %></td>
          <td><%= coupon.updated_atstrftime("%B, %d %Y at %I:%M %p %Z") %></td>
          <td><%= "Active" unless coupon.disabled %>
          <%= "Disabled" if coupon.disabled %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</section>
