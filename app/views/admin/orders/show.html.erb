<h1><%= @order.id %></h1>
<%= @order.created_at %>
<%= @order.updated_at %>
<%= @order.status %>

<% @order.ordered_items.each do |item| %>
  <section id="item-<%= item.item_id %>">
    <%= item.name %>
    <%= item.description %>
    <%= item.image %>
    <%= item.quantity %>
    <%= item.unit_price %>
    <%= item.subtotal %>
    <ul>
      <li><%= button_to "Fulfill", merchant_order_path(@order, order_item: order_item), method: :put unless order_item.fulfilled || order_item.quantity > order_item.merchant_stock %></li>
      <li><%= "Item Fulfilled" if order_item.fulfilled %></li>
      <li id="big-red-box"><%= "Not Enough In Stock" if order_item.quantity > order_item.merchant_stock %></li>
    </ul>
  </section>
<% end %>

<%= button_to "Cancel Order", admin_order_path(@order), method: :put, class: 'btn btn-danger' if @order.status == 'pending' %>
<%= @order.quantity_of_items %>
<%= @order.grand_total %>
